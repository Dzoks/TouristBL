<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/weather_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/city_name"
        android:layout_marginTop="6dp"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/weather_main_photo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weather_city_name"
        />

    <TextView
        android:id="@+id/weather_main_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weather_main_temp"
        />
    <TextView
        android:id="@+id/weather_main_temp"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weather_main_photo"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/weather_one_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/weather_one_photo"
        app:layout_constraintRight_toRightOf="@id/weather_one_photo"
        app:layout_constraintBottom_toTopOf="@id/weather_one_photo"
        />
    <ImageView
        android:id="@+id/weather_one_photo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/weather_one_temp"
        />
    <TextView
        android:id="@+id/weather_one_temp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/weather_one_photo"
        app:layout_constraintRight_toRightOf="@id/weather_one_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="14dp"

        />
    <TextView
        android:id="@+id/weather_two_date"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/weather_two_photo"
        app:layout_constraintRight_toRightOf="@id/weather_two_photo"
        app:layout_constraintBottom_toTopOf="@id/weather_two_photo"
        />
    <ImageView
        android:id="@+id/weather_two_photo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="24dp"
        app:layout_constraintLeft_toRightOf="@id/weather_one_photo"
        app:layout_constraintRight_toLeftOf="@id/weather_three_photo"
        app:layout_constraintBottom_toBottomOf="@+id/weather_two_temp"
        />
    <TextView
        android:id="@+id/weather_two_temp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"

        app:layout_constraintLeft_toLeftOf="@id/weather_two_photo"
        app:layout_constraintRight_toRightOf="@id/weather_two_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/weather_three_date"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/weather_three_photo"
        app:layout_constraintRight_toRightOf="@id/weather_three_photo"
        app:layout_constraintBottom_toTopOf="@id/weather_three_photo"
        />
    <ImageView
        android:id="@+id/weather_three_photo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="24dp"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintBottom_toBottomOf="@+id/weather_three_temp"
        />
    <TextView
        android:id="@+id/weather_three_temp"
        android:layout_marginBottom="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/weather_three_photo"
        app:layout_constraintRight_toRightOf="@id/weather_three_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>